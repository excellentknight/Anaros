<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.faresimtiez.algotech.anaros.DevActivity"
    tools:showIn="@layout/app_bar_dev">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center">

                <ImageView
                    android:id="@+id/i"
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_gravity="center_horizontal"
                    android:padding="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logoalgo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/i"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:text="Le développement de votre business est le cœur de notre métier"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Notre mission est de développer l’identité digitale de votre entreprise, et de gérer vos outils de communications afin de promouvoir votre image de marque auprès de vos prospects, partenaires, et fournisseurs. Le développement de tout type de site Web est le cœur de notre métier, passons par les solutions intranet et extranet. Nous accompagnons également nos clients dans leurs stratégie digitale, commençant par la conception de votre identité visuelle, le choix efficace de vos canaux de communications et l’animation de ces derniers, sans oublier l’optimisation de votre référencement dans les résultats des moteurs de recherche. Grace à l’expertise que nous avons acquise, nous vous garantissons la qualité de nos services, dont votre satisfaction est notre objectif. Notre mission est de créer et gérer tous vous outils de communications quel que soit votre secteur d’activité afin de vous donner une valeur ajoutée.
"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="20sp" />

            <Button
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                android:text="Check our website"
                android:background="#fff"
                android:textColor="@color/colorPrimary"
                android:id="@+id/visit_website"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
