<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.faresimtiez.algotech.anaros.CommandeActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/chat_nom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:ems="100"
                    android:inputType="textPersonName"
                    android:hint="Nom" />

                <EditText
                    android:id="@+id/chat_prenom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:ems="100"
                    android:inputType="textPersonName"
                    android:hint="Prenom" />

                <EditText
                    android:id="@+id/chat_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:ems="100"
                    android:inputType="textPersonName"
                    android:hint="Email" />

                <EditText
                    android:id="@+id/chat_tel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:ems="100"
                    android:inputType="number"
                    android:hint="Tel" />




                <!-- service 01-->
                <LinearLayout
                    android:id="@+id/ly_ser_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/ss1" />

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/bx_ser_1_a1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin basique"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin spécifique"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin jeunesse du regard"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Osmoclean"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin cocoon automne/hiver"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin détoxication printemps/été"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Hydra Absolu"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin pure absolu"
                                android:onClick="selectItem"/>
                        </LinearLayout>
                        <LinearLayout
                            android:weightSum="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <CheckBox
                                android:id="@+id/bx_ser_1_a9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Sensi Absolu"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin hyaluronique"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Intensive peeling"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Jeunesse globale"
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Active Repair "
                                android:onClick="selectItem"/>
                            <CheckBox
                                android:id="@+id/bx_ser_1_a14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Soin Esthe.White"
                                android:onClick="selectItem"/>

                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <EditText
                android:visibility="invisible"
                android:id="@+id/msg_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:ems="100"
                android:hint="message"
                android:inputType="textPersonName" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/msg_input"
                    android:text="confirmer"
                    android:id="@+id/confirm"
                    android:onClick="finalSelection"/>
                <Button
                    android:visibility="invisible"
                    android:id="@+id/btn_send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/msg_input"
                    android:text="send" />
            </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/final_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
